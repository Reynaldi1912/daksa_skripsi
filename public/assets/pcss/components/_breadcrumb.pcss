/* -- Breadcrumb */

.breadcrumb {
  background-color: transparent;
  margin-bottom: 16px;
  padding: 0;
  font-size: 13px;
}
.breadcrumb-item {
  opacity: .5;
  &.active {
    color: var(--color-black);
    opacity: 1;
  }
  + .breadcrumb-item {
    &:before {
      content: "\f054";
      font-family: "Font Awesome 5 Free";
      font-weight: 900;
      font-size: 10px;
      opacity: 0.5;
    }
  }
}